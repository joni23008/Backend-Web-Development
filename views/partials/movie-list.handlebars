<ul>
  {{#each movies}}
    <li>
      <strong>{{Name}}</strong> ({{Year}}) â€” {{category}}
      <p>{{Description}}</p>

      {{!-- Buttons --}}
      <!-- Toggle Review Form Button -->
      <button onclick="toggleReviewForm('{{_id}}')">Write Review</button>
      <!-- Toggle Show Reviews Button -->
      <button class="api-button" data-endpoint="/review/movie/{{_id}}" data-target="#reviews-list-{{_id}}">Show Reviews</button>
      {{!-- More buttons in the future? --}}
      <button class="api-button" data-endpoint="/api/data2" data-target="#output2">Load Data 2</button>
      <button class="api-button" data-endpoint="/api/data3" data-target="#output3">Load Data 3</button>

      {{!-- Containers --}}
      <!-- Review Form -->
      <div id="review-form-{{_id}}" class="output-container hidden">
        {{> review-form movieId=_id }}
      </div>
      <!-- Reviews List -->
      <div id="reviews-list-{{_id}}" class="output-container hidden"></div>
      {{!-- More containers for the buttons in the future? --}}
      <div id="output2" class="output-container hidden"></div>
      <div id="output3" class="output-container hidden"></div>

    </li>
  {{/each}}
</ul>

