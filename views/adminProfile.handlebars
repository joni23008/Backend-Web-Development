<main id="admin-dashboard">
    {{> messages}}

    <h1>Admin Dashboard</h1>

    <div class="review-list">
    {{#each reviews}}
        <article class="review-card">
            <div>
                <p><strong>User:</strong> {{this.user.username}}</p>
                <p><strong>Movie:</strong> {{this.movie.title}}</p>
                <p><strong>Comment:</strong> {{this.comment}}</p>
            </div>
            <form method="POST" action="/profile/review/{{this._id}}" onsubmit="return confirm('Are you sure you want to delete this review?')">
                <button type="submit" aria-label="Delete review by {{this.user.username}}">Delete</button>
            </form>
        </article>
    {{/each}}
    </div>
</main>